<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/const_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:id="@+id/tv_payment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have PayU Account"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_payment_type"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                tools:ignore="HardcodedText"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginTop="14dp"
                android:textColor="@color/upi_screenText_color"/>

            <ImageView
                android:id="@+id/img_payment_type"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_right"
                tools:ignore="ContentDescription"
                android:layout_marginTop="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_payment_enable"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment_type"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginTop="@dimen/siq_6"
        android:text="Current Payment Mode"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey3"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment_enable"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="@dimen/siq_14"/>

</androidx.constraintlayout.widget.ConstraintLayout>