<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/medicationNameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/medicationNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracitamole (company Name)"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/medicationDaysLayout"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/medicationNameLayout"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/medicationDaysText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Of Days: "
                android:textColor="@color/colorGreyText"
                 />

            <TextView
                android:id="@+id/medicationDaysValue"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/medicationDaysText"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/medicationDaysDurationLayout"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/medicationDaysLayout"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/medicationDaysDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day Duration: "
                android:textColor="@color/colorGreyText"
                />

            <TextView
                android:id="@+id/medicationDaysDurationValue"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/medicationDaysDurationText"
                android:layout_height="wrap_content"
                android:text="1 - 0 - 0 - 1"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/discontinueButtonLayout"
            android:layout_below="@+id/medicationDaysDurationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/discontinueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discontinue"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorDanger"
                />



        </RelativeLayout>

        <View
            android:id="@+id/notesViewLayout"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/discontinueButtonLayout"
            android:background="@color/colorGrey2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/sixteendp"
            android:text="Discontinued"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorDanger"
            android:id="@+id/discontinue_image"/>

    </RelativeLayout>

</RelativeLayout>