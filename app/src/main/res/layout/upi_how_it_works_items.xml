<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/siq_16"
    >

    <ImageView
        android:id="@+id/img_circle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_point"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/img_circle"
        android:text="You can get your UPI f jddddddddd any other apps like GPay, PhonePay and Paytm"
        tools:ignore="HardcodedText,RtlSymmetry"
        android:textSize="14sp"
        android:textColor="@color/upi_screenText_color"/>
</RelativeLayout>