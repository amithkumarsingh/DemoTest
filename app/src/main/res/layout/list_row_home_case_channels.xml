                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Created On"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"/>

                        <TextView
                            android:id="@+id/homeCaseChannelsCreateOn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20 Jan 17"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGrey1"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/homeCaseChannelsMiddleSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/homeCaseChannelsHeaderSection">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/homeCaseChannelsPatientName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vaiabhavsdsdsdsdsd"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/colorBlack"
                            android:textSize="20dp"
                            />

                        <TextView
                            android:id="@+id/appointmentsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient's Name"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/homeCaseChannelsTaskCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/colorGreen3"
                            android:text="0 Task"
                            android:layout_marginTop="10dp"/>



                        <TextView
                            android:id="@+id/homeCaseChannelsDiscussionCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/colorInfo"
                            android:text="0 Post"/>


                        <TextView
                            android:id="@+id/homeCaseChannelsRecordsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 Records"
                            android:textSize="16dp"
                            android:textColor="@color/colorBlueLight"
                            android:layout_marginStart="10dp"
                            />



                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrey1"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/homeCaseChannelsMiddleSection"/>

                <LinearLayout
                    android:id="@+id/homeApptRowBottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/homeCaseChannelsMiddleSection">

