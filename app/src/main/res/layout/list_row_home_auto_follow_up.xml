                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/bookApptLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">


                            <TextView
                                android:id="@+id/homeFollowUpDateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:text="Follow Up Date"
                                android:textColor="@color/colorCardBack"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/followUpDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/homeFollowUpDateText"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="5dp"
                                android:text="1 july,2019"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                android:textColor="@color/colorBlack" />


                            <Button
                                android:id="@+id/apptBookButton"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_below="@+id/homeFollowUpDateText"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="5dp"
                                android:text="Book appt."
                                android:textStyle="bold"
                                android:background="@color/colorAccent"
                                android:textColor="@color/colorWhite" />



                        </RelativeLayout>


                    </RelativeLayout>

                    <View
