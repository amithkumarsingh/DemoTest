                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:text=""
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold" />


                        </RelativeLayout>






