                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="5dp"
                                android:text="Completely"
                                android:textColor="@color/colorGreenLight"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/patientMessageLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/followedInstructionLayout"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/patientMessageText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="Patient's Message" />

                            <TextView
                                android:id="@+id/patientMessageData"
                                android:layout_width="match_parent"
                                android:layout_below="@+id/patientMessageText"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:ellipsize="end"
                                android:text="not good fdfdsffddfddfdfd"
                                android:textColor="@color/colorBlack"
                                android:layout_marginEnd="10dp"
                                android:layout_toLeftOf="@+id/followUpPatientMsgMore"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/followUpPatientMsgMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="@string/more"
                                android:textColor="@color/colorAccent"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/patientMessageText"/>


                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/reportLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/patientMessageLayout"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/reportText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="Report" />

                            <TextView
                                android:id="@+id/reportData"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="5dp"
                                android:text="NA"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/blankText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="5dp"
                                android:text=""
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/apptLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/reportLayout"
                            android:visibility="gone"
                            android:layout_marginTop="6dp">

