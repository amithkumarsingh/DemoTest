<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorBlueLight2">

    <RelativeLayout
        android:id="@+id/dialogExhaustedLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/dialogExhaustedVerifyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="Callback Requested"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dialogExhaustedVerifyCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_close"
            android:backgroundTint="@color/colorWhite" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/siq_32"
        android:layout_marginBottom="@dimen/siq_32"
        android:layout_below="@+id/dialogExhaustedLayoutHeader">

        <TextView
            android:id="@+id/thanks1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/exhausted_thanks1" />

        <TextView
            android:id="@+id/thanks2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thanks1"
            android:layout_marginTop="@dimen/siq_16"
            android:gravity="center"
            android:text="@string/exhausted_thanks2" />
        <Button
            android:id="@+id/exhausted_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thanks2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/siq_44"
            android:text="Close" />
    </RelativeLayout>

</RelativeLayout>
