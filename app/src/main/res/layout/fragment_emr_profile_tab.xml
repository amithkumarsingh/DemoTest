<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_parent_gen_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvGeneralIdHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registration ID"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorGreyText"/>

                    <TextView
                        android:id="@+id/tvGeneralId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                  <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorGreyText"/>

                    <TextView
                        android:id="@+id/patientNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:id="@+id/patientNameInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/drawable_rectangle_chat_box2"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:elevation="5dp">

                        <EditText
                            android:id="@+id/patientNameEdit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="@string/enter_name"
                            android:maxLines="1"
                            android:inputType="text"
                            android:layout_marginLeft="5dp"
                            android:background="@null"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/patientNameErrorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please enter valid name"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorRed"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorGreyText"/>

                    <TextView
                        android:id="@+id/patientEmailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:id="@+id/patientEmailInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/drawable_rectangle_chat_box2"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:elevation="5dp">

                        <EditText
                            android:id="@+id/patientEmailEdit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="@string/enter_email_address"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"
                            android:layout_marginLeft="5dp"
                            android:background="@null"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/patientEmailErrorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please enter email address"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorRed"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_number"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorGreyText"/>

                    <TextView
                        android:id="@+id/patientPhoneText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:id="@+id/patientPhoneInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/drawable_rectangle_chat_box2"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:elevation="5dp">

                        <EditText
                            android:id="@+id/patientPhoneEdit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="@string/enter_patient_contact"
                            android:maxLines="1"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:layout_marginLeft="5dp"
                            android:background="@null"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/patientPhoneErrorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please enter valid phone number"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorRed"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/age"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorGreyText"/>

                    <TextView
                        android:id="@+id/patientAgeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:id="@+id/patientAgeInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="5dp"
                        android:orientation="horizontal"
                        android:background="@drawable/drawable_rectangle_chat_box2"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/patientAgeEdit"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:hint="@string/e.g.7"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:inputType="numberDecimal"
                            android:layout_marginLeft="5dp"
                            android:background="@null"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/colorGrey1"
                            android:layout_toRightOf="@+id/patientAgeEdit"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/patient_age_spin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:background="@android:color/transparent"
                                android:hint="@string/enter_phone_edit"
                                android:spinnerMode="dropdown" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:adjustViewBounds="false"
                                android:padding="12dp"
                                android:src="@drawable/ic_chevron_down" />
                        </LinearLayout>




                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:textColor="@color/colorGreyText"/>

                    <TextView
                        android:id="@+id/patientGenderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:id="@+id/patientGenderInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="5dp"
                        android:background="@drawable/drawable_rectangle_chat_box2"
                        android:visibility="gone">

                        <Spinner
                            android:id="@+id/patientGenderSelect"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_bloodg"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorGreyText"/>

                    <TextView
                        android:id="@+id/patientBloodText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:id="@+id/patientBloodInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="5dp"
                        android:background="@drawable/drawable_rectangle_chat_box2"
                        android:visibility="gone">

                        <Spinner
                            android:id="@+id/patientBloodSelect"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/height_inches"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/colorGreyText"/>

                    <TextView
                        android:id="@+id/patientHeightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:id="@+id/patientHeightInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="5dp"
                        android:background="@drawable/drawable_rectangle_chat_box2"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/patientHeightEdit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="@string/e.g.7"
                            android:maxLines="1"
                            android:maxLength="3"
                            android:inputType="number"
                            android:layout_marginLeft="5dp"
                            android:background="@null"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/saveEditButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save_proceed"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/drawable_rectangle_chat_box2"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>