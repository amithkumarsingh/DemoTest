<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/recordEcntPdfLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/recordPdfAttach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/attachment"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/recordPdfView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/recordPdfAttach"
            android:text="@string/view"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/recordPdfCreatedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordPdfAttach"
            android:layout_marginStart="10dp"
            android:text="Created On 23, Jul 2018"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGrey2"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recordEcntNotesLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <TextView
            android:id="@+id/recordNotesAttach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/attachment"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/recordNotesView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/recordNotesAttach"
            android:text="@string/view"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recordNotesPresValidLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordNotesAttach"
            android:layout_marginStart="10dp"
            android:text="Prescription Valid Till: "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordNotesPresValid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordNotesAttach"
            android:layout_marginStart="10dp"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/recordNotesPresValidLabel"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordNotesDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordNotesPresValid"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:text="Description: "/>

        <TextView
            android:id="@+id/recordNotesDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordNotesPresValid"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/recordNotesDescriptionLabel"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/recordNotesMedPres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordNotesDescription"
            android:layout_marginStart="10dp"
            android:text="@string/medical_prescription"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/recordNotesMedPresIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_toRightOf="@+id/recordNotesMedPres"
            android:layout_below="@+id/recordNotesDescription"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/recordNotesTestPres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordNotesMedPres"
            android:layout_marginStart="10dp"
            android:text="@string/test_prescription"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/recordNotesTestPresIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_toRightOf="@+id/recordNotesTestPres"
            android:layout_below="@+id/recordNotesMedPres"
            android:layout_marginStart="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGrey2"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recordEcntEvalSymptomLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <TextView
            android:id="@+id/recordEvalSymptomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Symptom Name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/recordEvalSymptomFirstRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalSymptomName"
            android:layout_marginStart="10dp"
            android:text="First Recorded On: "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalSymptomStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalSymptomFirstRecord"
            android:layout_marginStart="10dp"
            android:text="@string/status"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalSymptomStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/recordEvalSymptomStatusText"
            android:layout_below="@+id/recordEvalSymptomFirstRecord"
            android:layout_marginStart="10dp"
            android:text="Ongoing"
            android:textStyle="bold"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGrey2"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recordEcntEvalInvestLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/recordEvalInvestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Invest Name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/recordEvalInvestParamLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalInvestName"
            android:layout_marginStart="10dp"
            android:text="Paraeters: "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalInvestParamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalInvestName"
            android:layout_toRightOf="@+id/recordEvalInvestParamLabel"
            android:layout_marginStart="10dp"
            android:text=""
            android:textStyle="bold"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalInvestValueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalInvestParamName"
            android:layout_marginStart="10dp"
            android:text="Value: "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalInvestValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalInvestParamName"
            android:layout_toRightOf="@+id/recordEvalInvestValueLabel"
            android:layout_marginStart="10dp"
            android:text=""
            android:textStyle="bold"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalInvestAttach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalInvestValue"
            android:layout_marginStart="10dp"
            android:text="@string/attachment"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalInvestView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/recordEvalInvestAttach"
            android:layout_below="@+id/recordEvalInvestValue"
            android:layout_marginStart="10dp"
            android:text="@string/view"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalInvestNoteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalInvestAttach"
            android:layout_marginStart="10dp"
            android:text="@string/notes"
            android:maxLines="2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalInvestNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalInvestAttach"
            android:layout_marginStart="10dp"
            android:text=""
            android:layout_toRightOf="@+id/recordEvalInvestNoteLabel"
            android:maxLines="2"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGrey2"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recordEcntEvalDiagnosLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <TextView
            android:id="@+id/recordEvalDiagnosName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text=""
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/recordEvalDiagnosPosited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalDiagnosName"
            android:layout_marginStart="10dp"
            android:text="@string/position_on"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalDiagnosStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalDiagnosPosited"
            android:layout_marginStart="10dp"
            android:text="@string/status"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalDiagnosStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/recordEvalDiagnosStatusText"
            android:layout_below="@+id/recordEvalDiagnosPosited"
            android:layout_marginStart="10dp"
            android:text=""
            android:textStyle="bold"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalDiagnosConfirmLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalDiagnosStatus"
            android:layout_marginStart="10dp"
            android:text="Confirmed/Ruled On:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recordEvalDiagnosConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recordEvalDiagnosStatus"
            android:layout_toRightOf="@+id/recordEvalDiagnosConfirmLabel"
            android:layout_marginStart="10dp"
            android:text=""
            android:textStyle="bold"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGrey2"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recordEvalObsLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <!--<ImageView-->
        <!--android:id="@+id/recordEvalObsIcon"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:src="@drawable/ic_pdf" />-->

        <TextView
            android:id="@+id/recordEvalObsCatName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:text=""
            android:textSize="18dp"
            android:lines="3"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recordEvalObsAddNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/recordEvalObsCountLayout"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorPrimaryDark"/>

        <LinearLayout
            android:id="@+id/recordEvalObsCountLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/recordEvalObsArrow"
            android:padding="5dp">

            <TextView
                android:id="@+id/recordEvalObsCatCount"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/recordEvalObsArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGrey2"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recordTreatPlanLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:visibility="visible">

        <!--<ImageView-->
        <!--android:id="@+id/recordTreatPlanIcon"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:src="@drawable/ic_pdf" />-->

        <TextView
            android:id="@+id/recordTreatPlanCatName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:text=""
            android:textSize="18dp"
            android:lines="3"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recordEvalTreatPlanAddNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new"
            android:padding="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/recordTreatPlanCountLayout"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorPrimaryDark"/>

        <LinearLayout
            android:id="@+id/recordTreatPlanCountLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/recordTreatPlanArrow"
            android:padding="5dp">

            <TextView
                android:id="@+id/recordTreatPlanCatCount"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/recordTreatPlanArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGrey2"/>

    </RelativeLayout>

</RelativeLayout>