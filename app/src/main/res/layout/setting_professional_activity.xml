<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFormActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/settingFormToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="5dp"
            app:subtitleTextColor="@color/colorWhite"
            app:titleTextColor="@color/colorWhite" />


        <!--Professional Form-->
        <RelativeLayout
            android:id="@+id/settingProfessionalForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/settingFormToolbar"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/languages"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/languageAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@string/add"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <!--                    <HorizontalScrollView-->
                    <!--                        android:id="@+id/horizontalScrollView1"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="50dp"-->
                    <!--                        android:layout_marginEnd="20dp"-->
                    <!--                        android:layout_marginStart="20dp"-->
                    <!--                        android:layout_marginTop="10dp">-->

                    <TextView
                        android:id="@+id/profesionalLanguageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="" />

                    <!--                    </HorizontalScrollView>-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qualification"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/qualificationAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@string/add"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <!--                    <HorizontalScrollView-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="50dp"-->
                    <!--                        android:layout_marginEnd="20dp"-->
                    <!--                        android:layout_marginStart="20dp"-->
                    <!--                        android:layout_marginTop="10dp">-->

                    <TextView
                        android:id="@+id/profesionalQualificationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="" />

                    <!--                    </HorizontalScrollView>-->

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/updateProfesionalDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/drawable_capsule_view"
                android:text="@string/update"
                android:textColor="@color/colorWhite"
                android:visibility="gone" />

        </RelativeLayout>



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>