<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ccPostMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ccPostSelfLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:layout_marginStart="90dp"
            android:elevation="2dp"
            android:visibility="visible"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/ccPostSelfDocName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr Example"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/ccPostSelfDocName"
                android:backgroundTint="@color/colorAccent3"
                android:layout_alignParentEnd="true"
                android:background="@drawable/drawable_rectangle_chat_box2">

                <TextView
                    android:id="@+id/ccPostSelfMsgText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello world"
                    android:textSize="14dp"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/ccPostSelfMsgTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30"
                    android:textSize="10sp"
                    android:textColor="@color/colorWhite"
                    android:layout_below="@+id/ccPostSelfMsgText"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ccPostOppoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="90dp"
            android:elevation="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/ccPostOppoDocName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr Example"
                android:textSize="12dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/ccPostOppoDocName"
                android:background="@drawable/drawable_rectangle_chat_box">

                <TextView
                    android:id="@+id/ccPostOppoMsgText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello world"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/ccPostOppoMsgTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30"
                    android:textSize="10sp"
                    android:layout_below="@+id/ccPostOppoMsgText"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>