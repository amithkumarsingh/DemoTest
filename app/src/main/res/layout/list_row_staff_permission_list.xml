<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/staffListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/staffListHeaderLayout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/drawable_ripple_effect"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/serviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="13dp"
                    android:text="Vaibhav"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:id="@+id/staffCallLayout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/staffSettingLayout"
                    android:background="@drawable/drawable_rectangle_border_green">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:background="@drawable/ic_call" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/staffSettingLayout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/siq_15"
                    android:backgroundTint="@color/blue"
                    android:background="@drawable/drawable_radius_shape_two">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/colorWhite"
                        android:background="@drawable/ic_permission_white" />

                </RelativeLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorGrey1" />


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>