<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_med_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorGreyText"
        android:layout_margin="@dimen/siq_8"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_no_records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="No medicine found"
        android:textColor="@color/colorRed"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_med_name"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="@dimen/siq_4"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_med_name"
        tools:layout_editor_absoluteX="-39dp"
        android:background="@color/colorGrey1"
        android:layout_margin="@dimen/siq_6"/>

    <Button
        android:id="@+id/btnAddToDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add To My Database"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toEndOf="@+id/tv_no_records"
        app:layout_constraintTop_toBottomOf="@+id/tv_med_name"
        tools:ignore="HardcodedText"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/siq_4"
        android:textSize="@dimen/siq_10"
        android:backgroundTint="@color/blue"/>
</androidx.constraintlayout.widget.ConstraintLayout>