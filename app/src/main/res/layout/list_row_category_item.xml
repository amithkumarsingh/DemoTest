<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/colorGrey1"
            android:background="@drawable/drawable_capsule_view">

            <TextView
                android:id="@+id/categogryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/categoryCancel"
                android:maxLines="2"
                android:textSize="10dp"
                android:text="test whssddfd cdccccc"
                android:textColor="@color/colorBlack"

                />

            <ImageView
                android:id="@+id/categoryCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/colorDanger"
                android:background="@drawable/ic_cancel" />


        </RelativeLayout>


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>