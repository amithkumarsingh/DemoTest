<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="12dp"
        android:id="@+id/doctorOrgLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff"
        android:visibility="visible"
        android:padding="10dp">

        <TextView
            android:id="@+id/doctorOrgNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:text="Dr.Examples"
            android:textSize="19dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/add_user_iconLayout"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/add_user_iconLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/addUserIcon"
                android:layout_toLeftOf="@+id/addUserText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_user_add"/>

            <TextView
                android:id="@+id/addUserText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="ADD"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/right_iconLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_toLeftOf="@+id/addUsertext"
                android:id="@+id/rightIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_right"/>
            <TextView
                android:id="@+id/selecttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Selected"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>

        </LinearLayout>



    </RelativeLayout>



</LinearLayout>