<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="325dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/sharedRecordCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"
            card_view:cardCornerRadius="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/apptHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/clinicName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp">


                        <ImageView
                            android:id="@+id/clinicImageIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_hospital"
                            android:backgroundTint="@color/colorWhite" />


                        <TextView
                            android:id="@+id/homeAutoFollowUpClinicName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/clinicImageIcon"
                            android:ellipsize="end"
                            android:maxEms="8"
                            android:maxLines="1"
                            android:text="Vaibhav"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />

                        <!--<ImageView-->
                        <!--android:id="@+id/infoImageIcon"-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:layout_marginLeft="5dp"-->
                        <!--android:layout_toRightOf="@+id/homeAutoFollowUpClinicName"-->
                        <!--android:background="@drawable/ic_info"-->
                        <!--android:backgroundTint="@color/colorWhite" />-->


                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/infoImageIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/ic_info"
                        android:backgroundTint="@color/colorWhite" />


                    <!--<TextView-->
                    <!--android:id="@+id/homeAutoFollowUpPatientName"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:text="Vaibhav"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:textColor="@color/colorWhite"-->
                    <!--android:textStyle="bold" />-->

                    <TextView
                        android:id="@+id/homeAutoFollowUpSubDateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/clinicName"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/sub_date"
                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/homeAutoFollowUpApptDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/clinicName"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@+id/homeAutoFollowUpSubDateLabel"
                        android:text="1 july,2019"
                        android:textColor="@color/colorWhite"
                        android:textSize="12dp"
                        android:textStyle="bold" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/apptHeading"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/followUpClinicDateLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/bookApptLayout">

                            <TextView
                                android:id="@+id/homeAutoFollowUpPatientName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:text="Vaibhav xznbxznBxnBZNXbmzBXmzBXbmZXMZxZXZ"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/colorBlack"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/bookApptLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">


                            <TextView
                                android:id="@+id/homeFollowUpDateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="5dp"
                                android:text="Submission Date"
                                android:textColor="@color/colorCardBack"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/followUpDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/homeFollowUpDateText"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textColor="@color/colorBlack"
                                android:textSize="12dp"
                                android:textStyle="bold" />


                            <!--                            <Button-->
                            <!--                                android:id="@+id/apptBookButton"-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="30dp"-->
                            <!--                                android:layout_below="@+id/homeFollowUpDateText"-->
                            <!--                                android:layout_centerInParent="true"-->
                            <!--                                android:layout_marginTop="5dp"-->
                            <!--                                android:background="@color/colorAccent"-->
                            <!--                                android:text="Book appt."-->
                            <!--                                android:textColor="@color/colorWhite"-->
                            <!--                                android:textStyle="bold" />-->


                        </RelativeLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/followUpDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/followUpClinicDateLayout"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp">

                        <RelativeLayout
                            android:id="@+id/followUpDateLabelLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/followUpDateLabelText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="Follow-up Date:"
                                android:textColor="@color/colorGreyText"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/followDateValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_toRightOf="@+id/followUpDateLabelText"
                                android:text="20 May 2020 @ 10:15 AM"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:id="@+id/bookAppointmentLayout"
                                android:layout_width="210dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/drawable_radius_shape"
                                android:padding="5dp"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/bookAppointmentIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_plus"
                                    android:tint="@color/colorWhite" />


                                <TextView
                                    android:id="@+id/apptBookButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/bookAppointmentIcon"
                                    android:background="@drawable/drawable_radius_shape"
                                    android:text="Book Follow-up Appt."
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                            </RelativeLayout>


                        </RelativeLayout>


                    </RelativeLayout>


                    <View
                        android:id="@+id/autoFollowUpViewLayout"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_below="@+id/followUpDateLayout"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/colorGrey1" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/autoFollowUpViewLayout"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:id="@+id/submissionDateLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/submissionDateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="Submission Date" />

                            <TextView
                                android:id="@+id/submissionDateData"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="1 july,2019"
                                android:textColor="@color/colorBlack"
                                android:textSize="12dp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/conditionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/submissionDateLayout"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:id="@+id/patientConditionLayout"
                                        android:layout_width="128dp"
                                        android:layout_height="55dp"
                                        android:layout_alignParentLeft="true"
                                        android:background="@drawable/drawable_radius_shape"
                                        android:backgroundTint="@color/colorDanger">

                                        <RelativeLayout
                                            android:layout_width="128dp"
                                            android:layout_height="55dp"
                                            android:layout_marginLeft="2dp"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginRight="35dp"
                                            android:layout_marginBottom="2dp"
                                            android:background="@color/colorWhite"
                                            android:padding="5dp">


                                            <TextView
                                                android:id="@+id/conditionText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentLeft="true"
                                                android:text="Condition"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="8dp" />

                                            <TextView
                                                android:id="@+id/conditionData"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/conditionText"
                                                android:layout_marginRight="5dp"
                                                android:text="-"
                                                android:textColor="@color/colorRed"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />


                                        </RelativeLayout>


                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/patientInstructionLayout"
                                        android:layout_width="128dp"
                                        android:layout_height="55dp"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/drawable_radius_shape"
                                        android:backgroundTint="@color/colorGreen3">

                                        <RelativeLayout
                                            android:layout_width="128dp"
                                            android:layout_height="55dp"
                                            android:layout_marginLeft="2dp"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginRight="35dp"
                                            android:layout_marginBottom="2dp"
                                            android:background="@color/colorWhite"
                                            android:padding="5dp">

                                            <TextView
                                                android:id="@+id/followInstructionText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentLeft="true"
                                                android:text="Followed Instructions?"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="8dp" />

                                            <TextView
                                                android:id="@+id/followedInstructionData"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/followInstructionText"
                                                android:layout_marginRight="5dp"
                                                android:text="-"
                                                android:textColor="@color/colorGreen3"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />


                                        </RelativeLayout>


                                    </RelativeLayout>


                                </RelativeLayout>


                            </RelativeLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/followedInstructionLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/conditionLayout"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/patientMessageLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/followedInstructionLayout"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/patientMessageTextIconLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/patientMessageText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:text="Patient's Message"
                                    android:textColor="@color/colorBlack" />

                                <ImageView
                                    android:id="@+id/patientInfoIcon"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/patientMessageText"
                                    android:src="@drawable/ic_info"
                                    android:tint="@color/colorAccent" />


                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/patientMessageTextLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/patientMessageTextIconLayout"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/patientMessageData"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:text="not good fdfdsffddfddfdfd"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold" />


                            </RelativeLayout>


                            <TextView
                                android:id="@+id/followUpPatientMsgMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="@string/more"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold"
                                android:visibility="gone" />


                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/reportLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/patientMessageLayout"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:id="@+id/attachmentLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        android:id="@+id/reportText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:text="Attachment" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/attachmentIconLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="40dp"
                                    android:layout_toRightOf="@+id/attachmentLayout">

                                    <ImageView
                                        android:id="@+id/attachmentIcon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_attachment"
                                        android:tint="@color/colorAccent" />

                                </RelativeLayout>


                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/attachmentIconLayout">

                                    <TextView
                                        android:id="@+id/reportData"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:text="NA"
                                        android:textColor="@color/colorAccent"
                                        android:textStyle="bold" />


                                </RelativeLayout>


                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/blankText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="5dp"
                                        android:text=""
                                        android:textColor="@color/colorAccent"
                                        android:textStyle="bold" />
                                </RelativeLayout>


                            </RelativeLayout>


                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/apptLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/reportLayout"
                            android:layout_marginTop="6dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/apptNoteText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="Appt. Notes" />

                            <TextView
                                android:id="@+id/apptNoteData"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:text=""
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold" />


                        </RelativeLayout>


                    </RelativeLayout>


                </RelativeLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>