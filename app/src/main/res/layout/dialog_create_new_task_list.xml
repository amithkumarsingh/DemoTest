<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Task"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/newTaskNameEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/drawable_rectangle_outline"
        android:maxLines="1"
        android:lines="1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:imeOptions="actionSearch"
        android:hint="Enter Task Name"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/taskDateLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/drawable_rectangle_outline">

            <TextView
                android:id="@+id/addTaskDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="12 Jan 20"
                android:textSize="19dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_calender"
                android:tint="@color/colorAccent" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assigned To"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        />

    <RelativeLayout
        android:id="@+id/caseChannelEpisodeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/drawable_rectangle_outline"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp">

        <Spinner
            android:id="@+id/addNewTaskSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="end">

        <Button
            android:id="@+id/newChannelDismissBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dismiss"
            android:background="@null"
            android:layout_marginEnd="@dimen/siq_6"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/newTaskCreateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

</LinearLayout>