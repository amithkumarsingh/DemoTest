<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EMRSharedRecordDetails">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/emr_shared_record_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/emr_shared_on_card"
        android:layout_height="wrap_content"
        android:layout_below="@id/emr_shared_record_details_toolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emr_shared_record_shared_on"
            android:text="Shared On 03 Apr, 2020"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:paddingTop="@dimen/sixteendp"
            android:paddingBottom="@dimen/sixteendp"
            android:background="@color/colorWhite"/>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emr_shared_on_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/sixteendp"
            android:id="@+id/emr_shared_record_layout">

        </LinearLayout>
    </ScrollView>



</RelativeLayout>