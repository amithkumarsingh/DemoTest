<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientRecordsCaseActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">


        <RelativeLayout
            android:id="@+id/apptSaveAsPrescriptionOption"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_alignParentLeft="true"
            android:visibility="visible"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/saveAsPrescriptionImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/colorWhite"
                android:background="@drawable/ic_save_prescription"
                />

            <TextView
                android:id="@+id/saveAsPrescriptionText"
                android:layout_width="wrap_content"
                android:layout_below="@+id/saveAsPrescriptionImage"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Save as prescription"
                />

        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/appointmentSharedOption"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="80dp"
            android:visibility="visible"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/shareImageIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/colorWhite"
                android:background="@drawable/ic_share"
                />

            <TextView
                android:id="@+id/shareText"
                android:layout_width="wrap_content"
                android:layout_below="@+id/shareImageIcon"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Share"
                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/recodShareCancelOption"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorRed"
                android:background="@drawable/ic_close"
                />


        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/apptRecCaseTopHeader"
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:layout_height="70dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/recordsProgressAboutLayout"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/apptRecCaseProgressOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/recordsProgAboutCircle1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/drawable_fill_circle"
                            android:elevation="2dp"
                            android:layout_centerInParent="true"/>

                        <ImageView
                            android:id="@+id/recordsProgAboutCircle2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/drawable_fill_circle"
                            android:visibility="visible"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/recordsProgAboutText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/apptRecCaseProgressOne"
                        android:textColor="@color/colorWhite" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_toEndOf="@+id/apptRecCaseProgressOne"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:background="@color/colorWhite" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/recordsProgressCaseLayout"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/apptRecCaseProgressTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:elevation="2dp">

                        <ImageView
                            android:id="@+id/recordsProgressCaseCircle1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/drawable_fill_circle"
                            android:elevation="2dp"
                            android:layout_centerInParent="true"/>

                        <ImageView
                            android:id="@+id/recordsProgressCaseCircle2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/drawable_fill_circle"
                            android:visibility="visible"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/recordsProgressCaseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Case"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/apptRecCaseProgressTwo"
                        android:textColor="@color/colorWhite" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:background="@color/colorWhite" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/recordsProgressHistoryLayout"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/apptRecCaseProgressThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:elevation="2dp">

                        <ImageView
                            android:id="@+id/recordsProgressHistoryCircle1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/drawable_fill_circle"
                            android:elevation="2dp"
                            android:layout_centerInParent="true"/>

                        <ImageView
                            android:id="@+id/recordsProgressHistoryCircle2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/drawable_fill_circle"
                            android:visibility="visible"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/recordsProgressHistoryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/apptRecCaseProgressThree"
                        android:textColor="@color/colorWhite" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:background="@color/colorWhite" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/recordsProgressNotesLayout"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/apptRecCaseProgressFour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/recordsProgressNotesCircle1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/drawable_fill_circle"
                            android:elevation="2dp"
                            android:layout_centerInParent="true"/>

                        <ImageView
                            android:id="@+id/recordsProgressNotesCircle2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/drawable_fill_circle"
                            android:visibility="visible"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/recordsProgressNotesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/apptRecCaseProgressFour"
                        android:textColor="@color/colorWhite" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_toLeftOf="@+id/apptRecCaseProgressFour"
                        android:layout_centerInParent="true"
                        android:background="@color/colorWhite" />

                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/recordsSectionProceed"
            android:layout_below="@+id/apptRecCaseTopHeader">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include
                        android:id="@+id/recordsAboutPatients"
                        layout="@layout/layout_appt_about_patient"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:visibility="visible" />

                    <include
                        android:id="@+id/recordsCaseCreate"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:visibility="gone"
                        layout="@layout/layout_appt_create_case" />

                    <include
                        android:id="@+id/recordsCaseSelect"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:visibility="gone"
                        layout="@layout/layout_appt_select_case" />

                    <include
                        android:id="@+id/recordsCaseHistory"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:visibility="gone"
                        layout="@layout/layout_records_case_history" />

                    <include
                        android:id="@+id/recordsNotes"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:visibility="gone"
                        layout="@layout/layout_records_notes" />



                    <RelativeLayout
                        android:id="@+id/prefNotesEmpty"
                        android:layout_width="match_parent"
                        android:background="@color/colorWhite"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Change your record preferences to add Handwritten Notes, Evaluations or Treatment Plan"
                            />





                    </RelativeLayout>





                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/recordsSectionProceed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorAccent"
            android:layout_alignParentBottom="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proceed"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginStart="20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right2"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:tint="@color/colorWhite"/>

        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>