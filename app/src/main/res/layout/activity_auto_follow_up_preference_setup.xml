<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".autofollowup.AutoFollowUpPreferenceSetup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/followUpPrefToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:elevation="5dp"
            app:subtitleTextColor="@color/colorWhite"
            app:titleTextColor="@color/colorWhite"
            app:theme="@style/AppTheme.Toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/followUpEnableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/enable_follow_up"
                        android:layout_marginStart="10dp"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/followUpSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/followUpPrefLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/followUpEnableLayout">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/follow_up_time"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:textStyle="bold"
                                />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp">

                                <EditText
                                    android:id="@+id/followUpNoOdDays"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="0dp"
                                    android:inputType="number"
                                    android:layout_toStartOf="@+id/followUpPrefApplyDays"
                                    android:background="@drawable/drawable_rectangle_outline"
                                    android:hint="@string/no_of_days"
                                    android:paddingStart="10dp" />

                                <Button
                                    android:id="@+id/followUpPrefApplyDays"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/apply_changes"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentEnd="true"
                                    android:background="@color/colorAccent"
                                    android:textColor="@color/colorWhite"
                                    android:padding="10dp"
                                    android:layout_marginEnd="10dp"
                                    />

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/followUpTabs"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:elevation="2dp"
                        android:weightSum="1">

                        <RelativeLayout
                            android:id="@+id/followUpQuestionTab"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/follow_questions" />

                            <View
                                android:id="@+id/followUpQuestionBottom"
                                android:layout_width="wrap_content"
                                android:layout_height="3dp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/colorPrimary" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/followUpSubmissionTab"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/specific_submission" />

                            <View
                                android:id="@+id/followUpSubmissionBottom"
                                android:layout_width="wrap_content"
                                android:layout_height="3dp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/colorPrimary"
                                android:visibility="invisible" />


                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/followUpQuestionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerInParent="true"
                                    android:text="@string/how_feeling"
                                    android:textSize="17dp" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/followUpHowFeelingSwt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/follow_inst"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentStart="true"
                                    android:textSize="17dp"/>

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/followUpFollowInstSwt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/file_report"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentStart="true"
                                    android:textSize="17dp"/>

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/followUpReportSwt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/current_status"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentStart="true"
                                    android:textSize="17dp"/>

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/followUpDescribeSwt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/option_book_appt"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentStart="true"
                                    android:textSize="17dp"/>

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/followUpBookOptinSwt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/followUpSubmissionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/notify_me"
                                            android:textColor="@color/colorBlack"
                                            android:layout_centerInParent="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_marginStart="10dp"/>

                                        <androidx.appcompat.widget.SwitchCompat
                                            android:id="@+id/followUpNotifyMeSwt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="10dp"/>

                                    </RelativeLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/colorGrey2"/>

                                    <LinearLayout
                                        android:id="@+id/followUpNotifyMeLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_weight="0.33"
                                                android:text="@string/all_submission"
                                                android:gravity="center"
                                                android:layout_height="match_parent" />

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_weight="0.33"
                                                android:layout_height="match_parent"
                                                android:gravity="center">

                                                <androidx.appcompat.widget.SwitchCompat
                                                    android:id="@+id/followUpDocSubmissionSwt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"/>

                                            </LinearLayout>

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_weight="0.33"
                                                android:text="@string/specific_submission"
                                                android:gravity="center"
                                                android:layout_height="match_parent" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="@color/colorGrey2"/>

                                        <LinearLayout
                                            android:id="@+id/followUpDocQuestionLayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:visibility="visible">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp"
                                                android:layout_margin="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/patient_feeling"
                                                    android:layout_centerInParent="true"
                                                    android:layout_alignParentStart="true"
                                                    android:textSize="17dp"/>

                                                <androidx.appcompat.widget.SwitchCompat
                                                    android:id="@+id/followUpPatientFeelingSwt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerInParent="true"/>

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp"
                                                android:layout_margin="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/instruction_question"
                                                    android:layout_centerInParent="true"
                                                    android:layout_alignParentStart="true"
                                                    android:textSize="17dp"/>

                                                <androidx.appcompat.widget.SwitchCompat
                                                    android:id="@+id/followUpInstSwt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerInParent="true"/>

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp"
                                                android:layout_margin="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/describe_condition"
                                                    android:layout_centerInParent="true"
                                                    android:layout_alignParentStart="true"
                                                    android:textSize="17dp"/>

                                                <androidx.appcompat.widget.SwitchCompat
                                                    android:id="@+id/followUpDocDescribeSwt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerInParent="true"/>

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp"
                                                android:layout_margin="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/upload_a_file"
                                                    android:layout_centerInParent="true"
                                                    android:layout_alignParentStart="true"
                                                    android:textSize="17dp"/>

                                                <androidx.appcompat.widget.SwitchCompat
                                                    android:id="@+id/followUpUploadFile"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerInParent="true"/>

                                            </RelativeLayout>


                                        </LinearLayout>

                                        <Button
                                            android:id="@+id/followUpDocApply"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/apply_changes"
                                            android:textColor="@color/colorWhite"
                                            android:background="@color/colorAccent"/>

                                    </LinearLayout>


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/notify_staff"
                                            android:textColor="@color/colorBlack"
                                            android:layout_centerInParent="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_marginStart="10dp"/>

                                        <androidx.appcompat.widget.SwitchCompat
                                            android:id="@+id/followUpNotifyStaffSwt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="10dp"/>

                                    </RelativeLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/colorGrey2"/>

                                    <LinearLayout
                                        android:id="@+id/followUpNotifyStaffLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_weight="0.33"
                                                android:text="@string/all_submission"
                                                android:gravity="center"
                                                android:layout_height="match_parent" />

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_weight="0.33"
                                                android:layout_height="match_parent"
                                                android:gravity="center">

                                                <androidx.appcompat.widget.SwitchCompat
                                                    android:id="@+id/followUpStaffSubmissionSwt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                                            </LinearLayout>

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_weight="0.33"
                                                android:text="@string/specific_submission"
                                                android:gravity="center"
                                                android:layout_height="match_parent" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="@color/colorGrey2"/>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_marginTop="10dp">

                                            <TextView
                                                android:layout_marginStart="10dp"
                                                android:layout_marginEnd="10dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/contact_details"
                                                android:textStyle="bold"/>

                                            <EditText
                                                android:id="@+id/followUpStaffEmail"
                                                android:layout_width="match_parent"
                                                android:layout_height="50dp"
                                                android:layout_marginTop="10dp"
                                                android:background="@drawable/drawable_rectangle_outline"
                                                android:hint="@string/staff_name"
                                                android:layout_marginStart="10dp"
                                                android:layout_marginEnd="10dp"
                                                android:paddingStart="10dp" />

                                            <EditText
                                                android:id="@+id/followUpStaffNumber"
                                                android:layout_width="match_parent"
                                                android:layout_height="50dp"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginStart="10dp"
                                                android:layout_marginEnd="10dp"
                                                android:inputType="number"
                                                android:background="@drawable/drawable_rectangle_outline"
                                                android:hint="@string/staff_no"
                                                android:paddingStart="10dp" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="@color/colorGrey2"
                                            android:layout_marginTop="10dp"/>

                                        <LinearLayout
                                            android:id="@+id/followUpStaffQuestionLayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:visibility="visible">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp"
                                                android:layout_margin="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/patient_feeling"
                                                    android:layout_centerInParent="true"
                                                    android:layout_alignParentStart="true"
                                                    android:textSize="17dp"/>

                                                <androidx.appcompat.widget.SwitchCompat
                                                    android:id="@+id/followUpStaffPatientFeelingSwt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerInParent="true"/>

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp"
                                                android:layout_margin="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/instruction_question"
                                                    android:layout_centerInParent="true"
                                                    android:layout_alignParentStart="true"
                                                    android:textSize="17dp"/>

                                                <androidx.appcompat.widget.SwitchCompat
                                                    android:id="@+id/followUpStaffInstSwt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerInParent="true"/>

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp"
                                                android:layout_margin="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/describe_condition"
                                                    android:layout_centerInParent="true"
                                                    android:layout_alignParentStart="true"
                                                    android:textSize="17dp"/>

                                                <androidx.appcompat.widget.SwitchCompat
                                                    android:id="@+id/followUpStaffDescribeSwt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerInParent="true"/>

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp"
                                                android:layout_margin="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/upload_a_file"
                                                    android:layout_centerInParent="true"
                                                    android:layout_alignParentStart="true"
                                                    android:textSize="17dp"/>

                                                <androidx.appcompat.widget.SwitchCompat
                                                    android:id="@+id/followUpStaffUplaodFileSwt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerInParent="true"
                                                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                                            </RelativeLayout>


                                        </LinearLayout>

                                        <Button
                                            android:id="@+id/followUpStaffApply"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/apply_changes"
                                            android:textColor="@color/colorWhite"
                                            android:background="@color/colorAccent"/>


                                    </LinearLayout>


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>